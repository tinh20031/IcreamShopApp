<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_background"
    android:padding="16dp"
    android:fitsSystemWindows="true">

    <!-- Logo -->

    <!-- TextView chào mừng -->

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="177dp"
        android:layout_height="96dp"
        android:layout_marginTop="28dp"
        android:contentDescription="Logo"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xin chào, Admin! 👋"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/imgLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <!-- Thông tin người dùng -->
    <TextView
        android:id="@+id/tvUserInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin người dùng"
        android:textSize="18sp"
        android:textColor="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <!-- Quản lý sản phẩm -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnManageProducts"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="270dp"
        android:layout_height="61dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/material_on_surface_emphasis_medium"
        android:text="Quản lý sản phẩm 🛍️"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvUserInfo" />

    <!-- Quản lý danh mục -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnManageCategories"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="270dp"
        android:layout_height="61dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/material_on_surface_emphasis_medium"
        android:text="Quản lý danh mục 📂"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnManageProducts" />

    <!-- Quản lý đơn hàng -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnManageOrders"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="270dp"
        android:layout_height="61dp"
        android:text="Quản lý đơn hàng 📦"
        android:backgroundTint="@color/material_on_surface_emphasis_medium"
        app:layout_constraintTop_toBottomOf="@id/btnManageCategories"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"/>

    <!-- Đăng xuất -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogout"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="270dp"
        android:layout_height="61dp"
        android:text="Đăng xuất 🚪"
        android:backgroundTint="@color/material_on_surface_emphasis_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
