<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/order_background"
    android:layout_marginBottom="8dp">

    <!-- Thông tin đơn hàng -->
    <TextView
        android:id="@+id/txtOrderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã đơn hàng: #1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/txtOrderDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày đặt: 2025-03-09 12:34:56"
        android:textSize="14sp"
        android:textColor="#555"/>

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trạng thái: Pending"
        android:textSize="14sp"
        android:textColor="#555"/>

    <!-- Danh sách chi tiết đơn hàng -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewOrderDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"/>

    <!-- Tổng tiền -->
    <TextView
        android:id="@+id/txtTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng tiền: 150,000 VND"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#E91E63"
        android:layout_marginTop="8dp"/>
</LinearLayout>